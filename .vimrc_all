" --- Общие настройки ---

set number                      " Включить нумерацию строк
set relativenumber              " Включить относительную нумерацию строк
set cursorline                  " Подсвечивать строку с курсором
set cursorcolumn                " Подсвечивать колонку с курсором
set showcmd                     " Показать неполные команды в нижней строке
set showmode                    " Показать текущий режим (например, INSERT)
set ruler                       " Показать положение курсора в нижней строке (строка и колонка)
set wildmenu                    " Включить улучшенное меню автодополнения для команд
set lazyredraw                  " Улучшить производительность при выполнении макросов и вставке текста
set showmatch                   " Подсвечивать парные скобки при вводе
set ignorecase                  " Игнорировать регистр при поиске
set smartcase                   " Использовать умное сопоставление регистра (игнорирует регистр, если запрос поиска в нижнем регистре, иначе чувствителен к регистру)
set incsearch                   " Поиск совпадений во время ввода
set hlsearch                    " Подсвечивать все найденные совпадения
set nowrap                      " Отключить перенос строк
set scrolloff=3                 " Оставлять минимум 3 строки сверху и снизу при прокрутке
set sidescrolloff=5             " Оставлять минимум 5 колонок слева и справа при горизонтальной прокрутке
set backspace=indent,eol,start  " Разрешить удаление символов через backspace в любых местах строки
set clipboard=unnamedplus       " Использовать системный буфер обмена для копирования и вставки
set mouse=a                     " Включить поддержку мыши для всех режимов
set timeoutlen=500              " Установить время ожидания для маппингов в миллисекундах

" --- Настройки отображения текста ---

set tabstop=4                   " Установить ширину табуляции в 4 пробела
set shiftwidth=4                " Использовать 4 пробела при автоматическом выравнивании
set expandtab                   " Преобразовать табуляции в пробелы
set autoindent                  " Автоматически применять отступ предыдущей строки
set smartindent                 " Умное выравнивание для вложенных блоков
set wrap                        " Включить перенос строк (чтобы отключить: set nowrap)
set linebreak                   " Перенос строк без разрыва слов
set textwidth=80                " Установить максимальную длину строки для автоматического переноса
set formatoptions+=tqrn         " Настройка автоматического форматирования текста (например, перенос по тексту)

" --- Настройки файла и буфера ---

set autoread                    " Автоматически перезагружать файл, если он был изменен вне Vim
set backup                      " Создавать резервную копию файла при сохранении
set undofile                    " Включить сохранение истории отмен для файлов
set swapfile                    " Включить использование swap-файлов (резервное копирование изменений)
set encoding=utf-8              " Установить кодировку файла на UTF-8
set fileencoding=utf-8          " Кодировка файла по умолчанию UTF-8
set fileformats=unix,dos,mac    " Распознавание форматов конца строки (LF, CRLF, CR)

" --- Поиск и замена ---

set inccommand=nosplit          " Показать предварительный результат замены в реальном времени
set ignorecase                  " Игнорировать регистр при поиске
set smartcase                   " Включить умное сопоставление регистра
set incsearch                   " Показывать результаты поиска по мере ввода
set hlsearch                    " Подсвечивать результаты поиска

" --- Внешний вид ---

set termguicolors               " Включить поддержку 24-битного цвета в терминале
set background=dark             " Установить темную цветовую схему (или light для светлой)
set colorcolumn=80              " Подсветить колонку на 80 символах (удобно для ограничения длины строк)

" --- Параметры работы с буферами ---

set hidden                      " Разрешить переключение между буферами без сохранения изменений
set splitright                  " Открывать новые вертикальные сплиты справа
set splitbelow                  " Открывать новые горизонтальные сплиты снизу
set laststatus=2                " Всегда показывать строку состояния
set showtabline=2               " Всегда показывать табы (вкладки) сверху
set updatetime=300              " Время в миллисекундах для обновления информации (например, для автосохранения)

" --- Отключение звуков и визуальных сигналов ---

set noerrorbells                " Отключить звуковые сигналы при ошибках
set novisualbell                " Отключить визуальные сигналы при ошибках
set t_vb=                       " Отключить любые дополнительные визуальные сигналы

" --- Безопасность и совместимость ---

set nocompatible                " Отключить режим совместимости с vi, включить все возможности Vim
set secure                      " Отключить возможность выполнения опасных команд в .vimrc
